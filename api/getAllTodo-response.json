{
  "type": "object",
  "required": ["statusCode", "body"],
  "properties": {
    "statusCode": {
      "type": "integer"
    },
    "headers": {
      "type": "object"
    },
    "body": {
      "type": "object",
      "required": ["results", "pageNumber", "pageSize", "totalResults"],
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "summary", "description", "deadline", "color"],
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "summary": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string"
              },
              "deadline": {
                "type": "string"
              },
              "color": {
                "type": "string",
                "enum": ["red", "blue", "green"]
              }
            },
            "additionalProperties": false
          }
        },
        "pageSize": {
          "type": "integer",
          "minimum": 1
        },
        "pageNumber": {
          "type": "integer",
          "minimum": 1
        },
        "totalResults": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  }
}
